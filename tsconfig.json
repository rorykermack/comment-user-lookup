{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es6",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["es2017", "dom", "es5"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types", "./typings.d.ts"
    ],
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}